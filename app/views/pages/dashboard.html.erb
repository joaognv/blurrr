<h3>Your matches:</h3>

   <% @matches.each do |m|  %>
  <div class="match-box">
    <div class="profile-row">
        <%= link_to profile_path(m.users.where.not(id: current_user.id).first.profile) do %>
        <div class="avatar-extra-small" style="background-image: url(<%= m.users.where.not(id: current_user.id).first.profile.photo.url  %> );" >

        </div>
        <% end %>
    </div>

      <div class="bubble-right">
        <%= link_to match_path(m) do %>
        <div class="chat-bubble">
          <%= m.last_message %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>


