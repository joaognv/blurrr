<div class="profile-show">
  <div class="profile-header">
    <div class="avatar-medium avatar-drop-on-line match" style="background-image: url(<%= @profile.photo.url ? @profile.photo.url : 'http://dl1.cbsistatic.com/i/2017/10/19/925f2651-018c-4d76-baf2-3ce4de2ecdb4/a9d0a0ebc85b66e01318f74b0be11da8/imgingest-7427792717055670780.png';  %> );" >

    </div>

  </div>

  <div class="profile-body">
    <h3><%= @profile.username %>, <%= @profile.age %></h3>
     <div class="profile-box">
        <div class="profile-row">
        <div class="profile-icon"><%= image_tag "sporty.png", height: 30 %> </div>
          <div class="profile-trait">Sporty</div>
          <div class="stats-bar">
            <div class="stats-bar-view" style="width:100%">
            </div>
        </div>
      </div>
        <div class="profile-row">
        <div class="profile-icon"><%= image_tag "party.png", height: 30 %> </div>
          <div class="profile-trait">Party</div>
            <div class="stats-bar">
              <div class="stats-bar-view" style="width:50%">
              </div>
            </div>
      </div>
        <div class="profile-row">
          <div class="profile-icon"><%= image_tag "nerdy.png", height: 30 %> </div>
          <div class="profile-bar">
            <div class="profile-trait">Nerdy</div>
              <div class="stats-bar">
                <div class="stats-bar-view" style="width:50%">
                </div>
              </div>
          </div>
        </div>
        <div class="profile-row">
         <div class="profile-icon"><%= image_tag "organized.png", height: 25 %> </div>
          <div class="profile-trait">Organized</div>
          <div class="stats-bar">
            <div class="stats-bar-view" style="width:75%">
            </div>
        </div>
      </div>
        <div class="profile-row">
        <div class="profile-icon"><%= image_tag "spiritual.png", height: 30 %> </div>
          <div class="profile-trait">Spiritual</div>
          <div class="stats-bar">
            <div class="stats-bar-view" style="width:25%">
            </div>
        </div>
      </div>
    </div>
    <%= link_to "Chat with your match", match_path(current_user.my_match_with(@profile.user)), class:"btn btn-danger" %>
  </div>
</div>
