
<div class="chat-page">

      <div class="chat-header">

        <div class="avatar-extra-small avatar-above" style="background-image: url(<%= @other_user.profile.photo.url ? @other_user.profile.photo.url : 'http://dl1.cbsistatic.com/i/2017/10/19/925f2651-018c-4d76-baf2-3ce4de2ecdb4/a9d0a0ebc85b66e01318f74b0be11da8/imgingest-7427792717055670780.png';  %> );" >
        </div>

      <h3 class="reciever-namee"><%= @other_user.profile.username %>, <%= @other_user.profile.age %></h3>
      </div>

     <div class="chat-bubbles">
        <% @messages.each do |message| %>
            <div class="<%= message.user == current_user ? "bubble-right" : "bubble-left" %>">
              <div class="chat-bubble">
                <p>
                   <%= message.message %>
                </p>
              </div>

            </div>
          <% end %>
     </div>


     <div class="chat-inputs">
      <!-- Form -->
        <div class="chatform">
          <input type="text" class="chat-input">
          <input type="hidden" id="match_id" value="<%= @match_id %>" />
          <input type="hidden" id="user_id" value="<%= @user_id %>" />
          <button class="brand-button-medium btn chat-send fa fa-paper-plane">  </button>
        </div>
     </div>
</div>

