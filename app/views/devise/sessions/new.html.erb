<div class="registration">
  <div class="container registration-container" style="background-image: url(<%= image_url 'bg22.png' %>);">

<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, placeholder: "example@gmail.com", required: false, autofocus: true %>
    <%= f.input :password, placeholder: "******", required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "button-login" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

  </div>
</div>
