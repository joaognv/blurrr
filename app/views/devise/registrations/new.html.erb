<div class="registration">

  <div class="container registration-container" style="background-image: url(<%= image_url 'bg22.png' %>);">

  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, placeholder: "example@gmail.com", required: true, autofocus: true %>
      <%= f.input :password, placeholder: "Password", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_lengtFh) %>
      <%= f.input :password_confirmation, placeholder: "Confirm Password", required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "button-signup" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
